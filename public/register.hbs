<body>
    <div class="logo">
        <img src="" alt="">
    </div>

    <div id="Content" class="container">
        <h2 class="h2 mb-0 p-3">Personal Information</h2>

        <div class="row twoRow">
            <div class="col-6 offset-3 col-md-5 offset-md-1">
                <h6 class="h6 m-1 mb-0 mt-0">FirstName:</h6>
                <input type="text" name="" value="" placeholder="First Name" class="col-12 col-md-10 mt-1">
            </div>
            <div class="col-6 offset-3 mt-2 col-md-5 offset-md-0 mt-md-0">
                <h6 class="h6 m-1 mb-0 mt-0">LastName:</h6>
                <input type="text" name="" value="" placeholder="Last Name" class="col-12 col-md-10 mt-1">
            </div>
        </div>

        <div class="row">
            <div class="col-6 offset-3 mt-2 offset-md-1 col-md-10 mt-md-3">
                <h6 class="h6 m-1 mb-0 mt-0">Email:</h6>
                <input type="text" name="" value="" placeholder="xxxxx@gmail.com" class="col-12 mt-1">
            </div>
        </div>

        <div class="row twoRow mt-2">
            <div class="col-6 offset-3 col-md-5 offset-md-1">
                <h6 class="h6 m-1 mb-0 mt-0">Birthday:</h6>
                <input type="date" name="" value="" placeholder="" class="col-12 mt-1">
            </div>
            <div class="col-6 offset-3 mt-2 col-md-5 offset-md-0 mt-md-0">
                <h6 class="h6 m-1 mb-0 mt-0">Contact Number:</h6>
                <input type="text" name="" value="" placeholder="+60123456789" class="col-12 mt-1">
            </div>  
        </div>

        <div class="row twoRow mt-2">
            <div class="col-6 offset-3 col-md-5 offset-md-1">
                <h6 class="h6 m-1 mb-0 mt-0">Region:</h6>
                <input type="text" name="" value="" placeholder="Malaysia" class="col-12 mt-1">
            </div>
            <div class="col-6 offset-3 mt-2 col-md-5 offset-md-0 mt-md-0">
                <h6 class="h6 m-1 mb-0 mt-0">City:</h6>
                <input type="text" name="" value="" placeholder="Selangor" class="col-12 mt-1">
            </div>  
        </div>

        <h4 class="h4 Password offset-3 mt-4 mb-md-0 mt-md-3 p-md-0 offset-md-1">Password Setup</h4>
        <div class="col-6 offset-3 offset-md-1 col-md-10">
            <input type="password" name="" value="" placeholder="Please Enter Password" class="col-12 mt-1" id="pwd1">
        </div> 
        <div class="col-6 offset-3 offset-md-1 mt-1 col-md-10">
            <input type="password" name="" value="" placeholder="Confirm Password" class="col-12" id="">
        </div> 

        <div class="row offset-0 offset-md-4 mt-4 pb-2 button">
            <div class="col-0 col-md-1"></div>
            <input type="button" name="" value="Sign up" class="offset-5 col-2 offset-md-0 col-md-4 btn" onclick="SignUpSuccess()">
        </div>
    </div> 
    

    <!-- JavaScript -->
    <script src="Assests/JS/tgc.js"></script>
</body>
